# Trainvoc Backend - Environment Variables
# =========================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control

# Spring Profile
SPRING_PROFILES_ACTIVE=dev

# Server Configuration
SERVER_PORT=8080

# Primary Database (trainvoc - game data)
DB_PRIMARY_URL=jdbc:postgresql://localhost:5432/trainvoc
DB_PRIMARY_USERNAME=postgres
DB_PRIMARY_PASSWORD=your_secure_password_here

# Secondary Database (trainvoc-words - vocabulary data)
DB_SECONDARY_URL=jdbc:postgresql://localhost:5432/trainvoc-words
DB_SECONDARY_USERNAME=postgres
DB_SECONDARY_PASSWORD=your_secure_password_here

# JPA Settings
JPA_DDL_AUTO=update
JPA_SHOW_SQL=false

# SSL Configuration (for production)
SSL_ENABLED=false
SSL_KEYSTORE_PATH=classpath:keystore.p12
SSL_KEYSTORE_PASSWORD=your_keystore_password_here
SSL_KEYSTORE_TYPE=PKCS12
SSL_KEY_ALIAS=tomcat

# Rate Limiting
RATE_LIMITING_ENABLED=true
RATE_LIMIT_REQUESTS=60

# Database Connection Pool
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=30000

# JWT Configuration (for authentication)
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_at_least_256_bits
JWT_EXPIRATION_MS=86400000
